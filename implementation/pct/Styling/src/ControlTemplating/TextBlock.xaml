    <Style x:Key="OrangeTextBlockStyle14"
           BasedOn="{StaticResource TextBlockStyle14}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource OrangeBrush}" />
    </Style>

    <Style x:Key="OrangeTextBlockStyle16"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource OrangeBrush}" />
    </Style>

    <Style x:Key="OrangeTextBlockStyle18"
           BasedOn="{StaticResource OrangeTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="OrangeTextBlockStyle20"
           BasedOn="{StaticResource OrangeTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="OrangeTextBlockStyle22"
           BasedOn="{StaticResource OrangeTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="22" />
    </Style>

    <Style x:Key="OrangeTextBlockStyle24"
           BasedOn="{StaticResource OrangeTextBlockStyle16}"

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
        <ResourceDictionary Source="Bitmaps.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  TextblockStyling for Pages or Controls  -->
    <Style x:Key="DefaultTextBlockStyle" TargetType="{x:Type TextBlock}" />


    <Style BasedOn="{StaticResource DefaultTextBlockStyle}" TargetType="{x:Type TextBlock}">
        <Setter Property="Validation.ErrorTemplate" Value="{DynamicResource NoErrorTemplate}" />
    </Style>

    <Style x:Key="TextBlockStyle14"
           BasedOn="{StaticResource DefaultTextBlockStyle}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="0" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="None" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Foreground" Value="{StaticResource DarkGreyBrush}" />
    </Style>

    <Style x:Key="TextBlockStyle16"
           BasedOn="{StaticResource TextBlockStyle14}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="TextBlockStyle18"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="TextBlockStyle20"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="TextBlockStyle22"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="22" />
    </Style>

    <Style x:Key="TextBlockStyle24"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style x:Key="TextBlockStyle80"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="80" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--  Styling for disabled textblocks  -->
    <Style x:Key="DisabledTextBlockStyle16"
           BasedOn="{StaticResource TextBlockStyle14}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{StaticResource GreyBrush}" />
    </Style>

    <Style x:Key="DisabledTextBlockStyle14"
           BasedOn="{StaticResource DisabledTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="DisabledTextBlockStyle18"
           BasedOn="{StaticResource DisabledTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="DisabledTextBlockStyle20"
           BasedOn="{StaticResource DisabledTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="DisabledTextBlockStyle22"
           BasedOn="{StaticResource DisabledTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="22" />
    </Style>

    <Style x:Key="DisabledTextBlockStyle24"
           BasedOn="{StaticResource DisabledTextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
    </Style>

    <!--  Orange textblocks  -->
    <Style x:Key="OrangeTextBlockStyle"
           BasedOn="{StaticResource TextBlockStyle16}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource OrangeBrush}" />

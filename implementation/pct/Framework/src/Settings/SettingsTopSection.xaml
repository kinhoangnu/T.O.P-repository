<UserControl x:Class="com.vanderlande.wpf.SettingsTopSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"           
                 />
        <TextBlock Grid.Row="0"
                   Margin="5 5 5 5"
                   HorizontalAlignment="Left"
                   FontFamily="Calibri"
                   FontSize="15"
                   FontStyle="Italic"
                   Foreground="{DynamicResource OrangeBrush}"
                   Text="{DynamicResource Settings}" />
    </Grid>
</UserControl>

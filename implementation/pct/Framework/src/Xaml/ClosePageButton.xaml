<UserControl x:Class="com.vanderlande.wpf.ClosePageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" Margin="10">

    <Button Style="{DynamicResource ImageButtonStyle}"
            Background="Transparent" Command="{Binding ClosePageCommand}"
            HorizontalAlignment="Right" VerticalAlignment="Top"
        Width="25" Height="25">
            <Image Source="{DynamicResource ClosePageIcon}" />
    </Button>

</UserControl>





